@model IEnumerable<Category>
@{

    ViewData["Title"] = "Kategori Tanımları";
}

<div class="d-flex">
    <a asp-action="Create" class="btn btn-primary ml-auto">
        <i class="fa fa-plus"></i>
        Yeni Kayıt
    </a>

</div>

<div class="card">
    <div class="card-body">

        <table class="table table-bordered">
            <thead>
                <tr>

                    <th width="50%">@Html.DisplayNameFor(Model=>Model.Name)</th>
                    <th width="10%">@Html.DisplayNameFor(Model => Model.DateCreated)</th>
                    <th width="10%">@Html.DisplayNameFor(Model => Model.Enabled)</th>
                    <th width="10%">&nbsp;</th>

                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @item.Name
                            <br />
                            <span class="small" >@item.Rayon.Name</span>
                        </td>
                        <td>
                            @item.DateCreated.ToLocalTime().ToShortDateString()
                        </td>
                        <td class="text-center">
                            @if (item.Enabled)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-remove text-danger"></i>

                            }

                        </td>
                        <td>
                            <a class="btn btn-link text-danger" asp-action="Remove" asp-route-id="@item.Id">
                               <i class="fa fa-trash"></i> 
                            </a>
                            <a class="btn btn-link text-info" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fa fa-pencil"></i> 
                            </a>
                        </td>
                    </tr> 
                }


            </tbody>

        </table>



    </div>

</div>
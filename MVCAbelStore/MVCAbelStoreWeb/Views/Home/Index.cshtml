 @{
    ViewData["Title"] = "Hoşgeldiniz";
}




<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" style="background-color:#1f0f53"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1" style="background-color:#1f0f53"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2" style="background-color:#1f0f53"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/slider/sonbahar indirimleri.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/slider/slider5.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/slider/handmadewithlove-bg.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" >
        <span class="carousel-control-prev-icon "  aria-hidden="false"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" style="color:#1f0f53">
        <span class="carousel-control-next-icon" aria-hidden="true" ></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />

<div class="container-fluid">
    <h2 class="text-center mt-3">Fırsat Ürünleri</h2>
    <div class="row row-cols-1 row-cols-md-5  ghttps://localhost:7196/#carouselExampleIndicators-4 m-3">
        @foreach (var product in ViewBag.Featured as IEnumerable<Product>)
        {
            <div class="col">
                <div class="card h-100 product-card ">
                    <img class="card-img-top" src="@product.ImageSrc" />
                    <div class="card-body">
                        <h4 class="card-title">@product.Name</h4>
                        <div class="d-flex align-items-center">
                            <div>
                                <h2 class="card-text text-success">@product.DiscountedPrice.Value.ToString("c")</h2>
                                <p class="card-text text-decoration-line-through small">@product.Price.ToString("c2")</p>
                            </div>

                            <a asp-route="product" asp-route-name="@product.Name.ToSafeUrlString()" asp-route-id="@product.Id" class="btn btn-info ml-auto">
                                <i class="fa fa-search"></i>İncele
                            </a>
                        </div>


                        <div class="bg-success  text-white h6 p-4 position-absolute " style="top:10px; right:10px;">%@product.DiscountRate <div class="small" style="font-size:.85rem;">İndirim</div></div>

                    </div>
                </div>

            </div>
        }
    </div>
</div>
